{
    "compilerOptions": {
      "lib": ["es2021"],
      "target": "es2021",
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "removeComments": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitAny": true,
      "strict": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
        "@src/*": ["src/*"],
        "@tests/*": ["tests/*"]
      },
      "declarationMap": true
    },
    "include": [
      "src/**/*.ts",
      "tests/**/*.ts"
    ],
    "exclude": [
      "../../../node_modules",
      "node_modules"
    ]
  }